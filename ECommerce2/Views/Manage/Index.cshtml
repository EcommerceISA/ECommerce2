@model ECommerce2.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}


<p class="text-success">@ViewBag.StatusMessage</p>
@if (User.IsInRole("Admin"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Administrator</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Estados", "Index", "States")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Ciudades", "Index", "Cities")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Compañias", "Index", "Companies")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Vendedores", "Index", "Users")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Status Pedido", "Index", "Status")</h4>
                                </div>
                            </div>
                        </div><!--/category-productsr-->
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@if (User.IsInRole("User"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>User Vendor</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Impuestos", "Index", "Taxes")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Categorias", "Index", "Categories")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Productos", "Index", "Products")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Almacenes", "Index", "Warehouses")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Inventarios", "Index", "Inventories")</h4>
                                </div>
                            </div>

                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Clientes", "Index", "Customers")</h4>
                                </div>
                            </div>
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Pedidos", "Index", "Orders")</h4>
                                </div>
                            </div>
                            
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Ventas", "Index", "Sales")</h4>
                                </div>
                            </div>


                        </div><!--/category-productsr-->
                    </div>
                </div>
            </div>
        </div>
    </div>

}
@if (User.IsInRole("Customer"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-3">
                <div class="left-sidebar">
                    <h2>Customer User</h2>
                    <div class="panel-group category-products" id="accordian">
                        <!--category-productsr-->
                        <div class="panel panel-default">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title">@Html.ActionLink("Pedidos", "Index", "OrderCustomers")</h4>
                                </div>
                            </div>                            
     
                        </div><!--/category-productsr-->
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="left-sidebar">
                <h2>Acount Settings</h2>
                <div class="panel-group category-products" id="accordian">
                    <!--category-productsr-->
                    <div class="panel panel-default">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    @if (Model.HasPassword)
